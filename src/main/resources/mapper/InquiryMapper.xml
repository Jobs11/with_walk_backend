<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.with_walk.mapper.InquiryMapper">

    <resultMap id="InquiryResultMap" type="com.example.with_walk.dto.InquiryDTO">
        <id property="inquiryId" column="inquiry_id"/>
        <result property="userId" column="user_id"/>
        <result property="category" column="category"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="replyContent" column="reply_content"/>
        <result property="replyDate" column="reply_date"/>
    </resultMap>

    <resultMap id="ReplyResultMap" type="com.example.with_walk.dto.InquiryReplyDTO">
        <id property="replyId" column="reply_id"/>
        <result property="inquiryId" column="inquiry_id"/>
        <result property="adminId" column="admin_id"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 사용자별 문의 목록 조회 -->
    <select id="selectInquiriesByUser" resultMap="InquiryResultMap">
        SELECT
            i.*,
            r.content as reply_content,
            r.created_at as reply_date
        FROM inquiries i
        LEFT JOIN inquiry_replies r ON i.inquiry_id = r.inquiry_id
        WHERE i.user_id = #{userId}
        ORDER BY i.created_at DESC
    </select>

    <!-- 전체 문의 목록 조회 (관리자용) -->
    <select id="selectAllInquiries" resultMap="InquiryResultMap">
        SELECT
            i.*,
            r.content as reply_content,
            r.created_at as reply_date
        FROM inquiries i
        LEFT JOIN inquiry_replies r ON i.inquiry_id = r.inquiry_id
        ORDER BY
            CASE WHEN i.status = '답변대기' THEN 0 ELSE 1 END,
            i.created_at DESC
    </select>

    <!-- 문의 상세 조회 -->
    <select id="selectInquiryById" resultMap="InquiryResultMap">
        SELECT
            i.*,
            r.content as reply_content,
            r.created_at as reply_date
        FROM inquiries i
        LEFT JOIN inquiry_replies r ON i.inquiry_id = r.inquiry_id
        WHERE i.inquiry_id = #{inquiryId}
    </select>

    <!-- 문의 등록 -->
    <insert id="insertInquiry" parameterType="com.example.with_walk.dto.InquiryDTO"
            useGeneratedKeys="true" keyProperty="inquiryId">
        INSERT INTO inquiries (user_id, category, title, content, status)
        VALUES (#{userId}, #{category}, #{title}, #{content}, '답변대기')
    </insert>

    <!-- 문의 삭제 -->
    <delete id="deleteInquiry">
        DELETE FROM inquiries
        WHERE inquiry_id = #{inquiryId}
    </delete>

    <!-- 문의 상태 변경 -->
    <update id="updateInquiryStatus">
        UPDATE inquiries
        SET status = #{status}
        WHERE inquiry_id = #{inquiryId}
    </update>

    <!-- 답변 등록 -->
    <insert id="insertReply" parameterType="com.example.with_walk.dto.InquiryReplyDTO"
            useGeneratedKeys="true" keyProperty="replyId">
        INSERT INTO inquiry_replies (inquiry_id, admin_id, content)
        VALUES (#{inquiryId}, #{adminId}, #{content})
    </insert>

    <!-- 답변 조회 -->
    <select id="selectReplyByInquiryId" resultMap="ReplyResultMap">
        SELECT * FROM inquiry_replies
        WHERE inquiry_id = #{inquiryId}
    </select>

    <!-- 답변 대기 중인 문의 개수 -->
    <select id="countPendingInquiries" resultType="int">
        SELECT COUNT(*) FROM inquiries
        WHERE status = '답변대기'
    </select>

</mapper>
